#footer_global
	margin-top 0

#branded .content
	background #fafafa
	
	// Logo
	.storefront-logo
		height 70px
		background #fff url('data:image/png;base64,') center no-repeat

	// Hero
	.hero
		overflow hidden
		position relative
		text-align center
		width 100%

		.swiper-prev
		.swiper-next
			height 122px
			margin-top -61px
			opacity 0.7
			position absolute
			top 50%
			width 60px
			z-index 99
			transition all 0.2s ease-out

		.swiper-prev
			background url('../img/swiperArrowLeft.png') no-repeat center top
			cursor pointer
			left 2%

			&:hover
				left 1.8%
				opacity 1

			&.background--light
				background-image url('../img/swiperArrowLeft-black.png')

		.swiper-next
			background url('../img/swiperArrowRight.png') no-repeat center bottom
			cursor pointer
			right 2%

			&:hover
				opacity 1
				right 1.8%

			&.background--light
				background-image url('../img/swiperArrowRight-black.png')

		.swiper-pagination
			bottom 0
			left 0
			padding 15px 0
			position absolute
			text-align center
			width 100%
			z-index 900

		.swiper-pagination-switch
			background #FFF
			border-radius 10px
			box-shadow 0px 1px 1px #666
			cursor pointer
			display inline-block
			height 9px
			margin 0 5px
			opacity 0.3
			width 9px
			transition all 0.2s ease-out

			&:hover
				opacity 0.8

		.swiper-active-switch
		.swiper-active-switch:hover
			opacity 1

		.background--light .swiper-pagination-switch
			background-color black

		.swiper-slide
			display none

			&.first-slide
				display block

			img
				border 0
				padding 0
				position relative
				width 100%

			a
				display block

	.brandsite-content-boxes
		width 880px
		margin -60px auto 0
		position relative
		z-index 1
		
		img
			width 100%
		
	.brandsite-full-width-content-box
		width 100%
		
		a
			// Woah. What's going on here?
			// We're using : selectors as conditionals, that's what!
				
			// if only one <a> exists do something
			&:only-of-type .content-box
				width 100%
		
			// if there are more, do something else
			.content-box
				width 50%
				float left
				
				img
					width 100%
					
	.brandsite-footer-logo
		height 150px
		background #fff url('data:image/png;base64,') no-repeat center