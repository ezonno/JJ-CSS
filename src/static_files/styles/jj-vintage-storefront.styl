// Overwrites
#footer_global
	margin-top 0
	
// Brandsite styling
#branded .content
	background url('../img/bg-vintage.jpg') top / contain repeat-y
	
	// Hiding, just as a precaution
	.storefront-brands-callout
	.storefront-brands
	.storefront-shipping-line
	.storefront-sellingpoints
	.storefront-categories-callout
		display none
	
	.storefront-logo
		height 70px
		background url('../img/storefront_logo_vintage.png') center / 101px 26px no-repeat
		opacity 0.75

	// Hero
	.hero
		overflow hidden
		position relative
		text-align center
		width 100%

		.swiper-prev
		.swiper-next
			height 122px
			margin-top -61px
			opacity 0.7
			position absolute
			top 50%
			width 60px
			z-index 99
			transition all 0.2s ease-out

		.swiper-prev
			background url('../img/swiperArrowLeft.png') no-repeat center top
			cursor pointer
			left 2%

			&:hover
				left 1.8%
				opacity 1

			&.background--light
				background-image url('../img/swiperArrowLeft-black.png')

		.swiper-next
			background url('../img/swiperArrowRight.png') no-repeat center bottom
			cursor pointer
			right 2%

			&:hover
				opacity 1
				right 1.8%

			&.background--light
				background-image url('../img/swiperArrowRight-black.png')

		.swiper-pagination
			bottom 0
			left 0
			padding 15px 0
			position absolute
			text-align center
			width 100%
			z-index 900

		.swiper-pagination-switch
			background #FFF
			border-radius 10px
			box-shadow 0px 1px 1px #666
			cursor pointer
			display inline-block
			height 9px
			margin 0 5px
			opacity 0.3
			width 9px
			transition all 0.2s ease-out

			&:hover
				opacity 0.8

		.swiper-active-switch
		.swiper-active-switch:hover
			opacity 1

		.background--light .swiper-pagination-switch
			background-color black

		.swiper-slide
			display none

			&.first-slide
				display block

			img
				border 0
				padding 0
				position relative
				width 100%

			a
				display block
				
	.storefront-categories
		margin-top -12px
		position relative
		z-index 1

		&:before
			content: ''
			display block
			width 100%
			height 12px
			background url('../img/divider-texture.png') repeat-x bottom
				
	.brandsite-content-boxes
		width 950px
		margin 40px auto 0
		
		.brandsite-callout
			border-top 6px solid #000
			border-bottom 2px solid #000
			
			img
				width 100%
			
		.content-box
			img
				width 100%
			
			&.divider
				margin -12px 0 0
				position relative

				&:before
					content: ''
					display block
					width 100%
					height 12px
					background url('../img/divider-white.png') repeat-x bottom
					
	.brandsite-full-width-content-box
		margin-top 50px
		
		img
			width 100%
	
		&:after
			content: ''
			display block
			width 100%
			height 12px
			background url('../img/divider-texture.png') repeat-x bottom
			position relative
			z-index 1
			margin-top -12px
			
	.brandsite-small-content-boxes
		width 880px
		margin 40px auto 0
		
		.content-box
			float left
		
		a:first-child .content-box
			margin-right 20px
			
	.brandsite-footer-logo
		height 148px
		background url('../img/storefront_logo_vintage.png') center / 147px 38px no-repeat
		opacity 0.75
		
@media only screen and (max-width: 1024px)
	#branded .content
		.storefront-logo
			height 50px
			background-size 78px 21px
			
		.brandsite-content-boxes
			width 724px
			margin-top 30px
			
		.brandsite-full-width-content-box
		.brandsite-small-content-boxes
			margin-top 30px
			
		.brandsite-small-content-boxes
			width 670px
			
			a:first-child .content-box
				margin-right 16px
			
		.brandsite-footer-logo
			height 105px
			background-size 113px 30px

