						margin-top 1px

				// Setting heights so transforms won't blur the content
				// Remeber to use even numbers
				&.core .brand-content
					height 50px
					
					img.brand-logo
						width 139px
				
				&.originals .brand-content
					height 34px
					
					img.brand-logo
						width 129px
					
				&.premium .brand-content
					height 30px
					
					img.brand-logo
						width 141px
					
				&.vintage .brand-content
					height 40px
					
					img.brand-logo
						width 154px
					
				&.tech .brand-content
					height 28px
					
					img.brand-logo
						width 138px
					
				&.jeans .brand-content
					height 50px
					
