@import 'modules/vars'
@import 'modules/mixins'
@import 'modules/easings'

// DMW overwrites, fixes

a
	color #2a2a2a

	&:hover
		color inherit

#footer_global
	margin-top 0

#branded
	.area
		width 100%
		background #fafafa
		padding-bottom 50px

		.wide_wrapper
			padding-bottom 1px

		.content *
			font-family $medium

	#content .wide_wrapper
		width 100% !important

	.headerfix
		width 100%

	.wrapper
		background #fff
		width 100%
		padding 0

// Frontpage
#branded
	.content

		// Hero
		.hero
			margin-top 33px
			overflow hidden
			position relative
			text-align center
			width 100%

			.swiper-prev
			.swiper-next
				height 122px
				margin-top -61px
				opacity 0.7
				position absolute
				top 50%
				width 60px
				z-index 99
				transition all 0.2s ease-out

			.swiper-prev
				background url('../img/swiperArrowLeft.png') no-repeat center top
				cursor pointer
				left 2%

				&:hover
					left 1.8%
					opacity 1

				&.background--light
					background-image url('../img/swiperArrowLeft-black.png')

			.swiper-next
				background url('../img/swiperArrowRight.png') no-repeat center bottom
				cursor pointer
				right 2%

				&:hover
					opacity 1
					right 1.8%

				&.background--light
					background-image url('../img/swiperArrowRight-black.png')

			.swiper-pagination
				bottom 0
				left 0
				padding 15px 0
				position absolute
				text-align center
				width 100%
				z-index 900

			.swiper-pagination-switch
				background #FFF
				border-radius 10px
				box-shadow 0px 1px 1px #666
				cursor pointer
				display inline-block
				height 9px
				margin 0 5px
				opacity 0.3
				width 9px
				transition all 0.2s ease-out

				&:hover
					opacity 0.8

			.swiper-active-switch
			.swiper-active-switch:hover
				opacity 1

			.background--light .swiper-pagination-switch
				background-color black

			.swiper-slide
				display none

				&.first-slide
					display block

				img
					border 0
					padding 0
					position relative
					width 100%

				a
					display block

		// Brands
		.storefront-brands
			width 900px
			margin -40px auto 0
			position relative
			z-index 1
			
			> div
				position relative
				margin-bottom 10px
				
				.brand-content
				.brand-overlay
					position absolute
					
				.brand-content
					z-index 1
					text-align center
					font-size 17px
					color #fff
					top 50%
					left 50%
					transform translateX(-50%) translateY(-50%)
					
					span
						display inline-block
						margin-top 20px
						overflow hidden
						
						&:after
							content ''
							display block
							width 100%
							height 2px
							background #fff
							margin-top 2px
							margin-left -100%
							transition margin 0.3s easeOutCubic
							

				&:hover 
					.brand-content span:after
						margin-left 0
						
					.brand-overlay
						opacity 0
						
				&.core .brand-content
					height 60px

				.brand-overlay
					top 0
					left 0
					width 100%
					height 100%
					opacity 1
					background rgba(27, 29, 33, 0.3)
					transition opacity 0.3s easeOutCubic