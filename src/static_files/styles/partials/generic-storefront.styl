@import 'modules/vars'
@import 'modules/mixins'

a
	color #2a2a2a

	&:hover
		color inherit

#branded
	.area
		width 100%

		.wide_wrapper
			padding-bottom 1px

		.content *
			font-family $regular

	#content .wide_wrapper
		width 100% !important

	.headerfix
		width 100%

	.wrapper
		background #fff
		width 100%
		padding 0

// Frontpage
#branded
	.content
		*
		*:after
		*:before
			color #2a2a2a
			box-sizing border-box

		// Setting default shared stuff, making DMW my bitch

		.storefront-brands
			display none

		.storefront-categories
			width 1090px
			margin 0 auto

		// Storefront callout
		.storefront-promos
			width 1090px
			margin 30px auto 0

			.storefront-callout
				border 1px solid #ebebeb
				width 100%
				text-align center
				position relative
				overflow hidden

				span
				a
					display block

				span
					font-size 15px
					text-transform uppercase
					font-family $regular
					letter-spacing 1px
					margin 24px auto 13px

				a 
					font-size 12px
					font-family $bold
					text-transform uppercase
					text-decoration underline
					margin-bottom 24px

					&:hover 
						text-decoration none

				button
					width 26px
					height 26px
					border none
					position absolute
					top 50%
					padding 0
					right 30px
					transform translateY(-50%)
					backface-visibility hidden
					transition opacity 0.3s ease
					opacity 0.2
					background transparent url('data:image/pngbase64,') no-repeat center

					&:hover
						opacity 1

		// Storefront logo
		.storefront-logo
			width 168px
			height 57px
			margin 37px auto 0
			background transparent url('data:image/pngbase64,') center no-repeat

		// Hero
		.storefront-hero
			width 1090px
			margin 41px auto 0
			padding 20px
			border 1px solid #ebebeb

			.hero
				margin 0 auto
				position relative

				img
					width 100%

				.swiper-prev
				.swiper-next
					position absolute
					z-index 10
					width 60px
					height 100%
					top 0
					cursor pointer
					background url('../img/sprite_hero_controls.png') no-repeat
					display none

				.swiper-prev
					background-position left center
					left 10px

				.swiper-next 
					background-position right center
					right 10px

				.swiper-pagination-container
					position absolute
					left 50%
					bottom 15px

					.swiper-pagination 
						text-align center
						position relative
						left -50%

						span 
							display inline-block
							width 10px
							height 10px
							background rgba(255, 255, 255, .25)
							margin 0 4px
							cursor pointer
							border-radius 10px

							&.swiper-active-switch
								background rgba(255, 255, 255, .85)

				&.swiper-container .swiper-slide 
					display none

					&.first-slide
						display block

		// Misc
		.storefront-categories-callout
			text-align center
			padding-bottom 15px
			width 1090px
			position relative
			margin 43px auto 0

			h1
				text-transform uppercase
				font-size 12px
				font-family $regular
				font-weight normal
				letter-spacing 1px
				color #2a2a2a
				line-height normal
				display inline-block
				background #fff
				position relative
				z-index 1
				margin 0 auto
				padding 0 25px

			.stroke
				width 100%
				height 1px
				background #ebebeb
				margin 0 auto
				bottom 22px
				position absolute
				z-index 0

		// Categories
		.storefront-categories
			width 100%

			.gridify
				width 1090px
				margin 0 auto

				.box
					margin-bottom 20px
					float left
					width 350px
					height 550px
					
					// Production
					&:nth-child(3n+2)
						margin auto 20px

					// Staging + sandbox
					/*
					&:nth-child(3n+3)
						margin auto 20px
					*/

					.content
						width 100%
						height 100%
						border 1px solid #ebebeb
						position relative
						background-size cover

						span
							text-align center
							display block

							&.title
								letter-spacing 1px
								font-family $regular
								font-size 26px
								margin-top 32px
								text-transform uppercase

							&.price
								font-size 14px
								margin-top 8px

								b
									font-family $medium
									font-weight normal

						.text 
							position absolute
							width 100%
							bottom 0
							z-index 2

							.slidein
								text-align center
								padding-bottom 29px

								a
									display block
									font-family $regular
									text-transform uppercase
									font-size 12px
									line-height 22px
									text-decoration underline

									&:hover
										text-decoration none

						.overlay
							width 100%
							height 100%
							background rgba(252, 252, 252, 0.15)
							position absolute
							top 0
							opacity 0

// Breakpoints

// 1200 - 1400 px
@media only screen and (max-width : 1400px)
	#branded
		.content		
			.storefront-promos
			.storefront-hero
				width 880px

			.storefront-categories-callout
				width 880px

			.storefront-categories
				.gridify
					width 880px

					.box
						width 280px
						height 440px

						.content
							span
								&.title
									margin-top 35px

							.bar 
								margin-top 20px

							.text .slidein
								padding-bottom 20px

// < 1200px
@media only screen and (max-width : 1200px)
	#branded
		.content

			.storefront-promos
				width 720px

			.storefront-hero
				width 720px
				padding 10px

			.storefront-categories-callout
				width 720px

			.storefront-categories
				.gridify
					width 720px

					.box
						width 234px
						height 378px
						margin-bottom 9px

						&:nth-child(3n+2)
							margin auto 9px

						.content
							span
								&.title
									margin-top 20px
									font-size 20px

								&.price
									margin-top 5px
									font-size 12px

							.text .slidein
								padding-bottom 15px

								a
									font-size 10px
									line-height 18px